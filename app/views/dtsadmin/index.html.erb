Clients:<br />
<% @clients.each do |client| %>
<%= link_to(client.email, :controller => :dtsadmin, :action => :listclient, :id => client.id) %> (<%= @clientcounts[client.id] %>)<br />
<% end %>

<br />Add a new client:<br />
<%= form_tag(:dtsadmin_addclient) do -%>
<%= text_field_tag 'email' %><br />
<%= password_field_tag 'password' %><br />
<%= password_field_tag 'password_confirmation' %><br />
<%= submit_tag 'Add Client' %>
<% end -%><br />

Admins:<br />
<% @admins.each do |admin| %>
<%= admin.email %><br />
<% end %>
