<%= render "unibar" %>


<div class="ast-main-content">
	<div class="limiter">
		<h1 class="ast-title">Clients:</h1>
		<p class="ast-text">
			<% @clients.each do |client| %>
			<%= link_to(client.name, :controller => :dtsadmin, :action => :listclient, :id => client.id) %> (# of orders: <%= @clientcounts[client.id] %>)<br />
			<% end %>

			<br />Add a new client:<br />
			<%= form_tag(:dtsadmin_addclient) do -%>
			<table>
			<tr><td>Name:</td><td><%= text_field_tag 'name' %></td></tr>
			<tr><td>Contact Email:</td><td><%= text_field_tag 'email' %></td></tr>
			<tr><td>Password:</td><td><%= password_field_tag 'password' %> * They can reset this themselves later.</td></tr>
			<tr><td>Confirm Password:</td><td><%= password_field_tag 'password_confirmation' %></td></tr>
			</table>
			<%= submit_tag 'Add Client' %>
			<% end -%><br />
		</p>

		<h1 class="ast-title">Admins:</h1>
		<p class="ast-text">
			<% @admins.each do |admin| %>
			<%= admin.email %><br />
			<% end %>
		</p>
	</div>
</div>
